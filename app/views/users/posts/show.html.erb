<%= image_tag(@post.img.banner.url, :class => "card-img-top") if @post.img? %>
<h2><%= @post.title %></h2>
<p><i>Créé le : <%= @post.updated_at.strftime('%d/%m/%Y') %></i></p>
<p><strong><%= @post.kicker %></strong></p>
<p><%= @post.body %></p>
<p>Auteur : <%= link_to user_posts_path do %>
    <%= @user.full_name %>
  <% end %>
</p>
<% if user_signed_in? and current_user.id == @user.id %>
  <%= link_to 'Éditer', [:edit, @user, @post], class: 'btn btn-success' %>
  <%= link_to 'Supprimer', [@user, @post], method: :delete, data: {confirm: 'Êtes-vous sûr ?'}, class: 'btn btn-danger' %>
<% end %>

<%= render partial: "comments/form", :comment => @comment %>

<div class="column">
  <% @comments.each do |comment| %>
    <p> <%= comment.body %></p>
  <% end %>
</div>